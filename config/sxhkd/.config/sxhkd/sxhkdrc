# Application Keybindings
XF86MonBrightnessDown
  light -U 5
XF86MonBrightnessUp
  light -A 5

XF86AudioRaiseVolume
  wpctl set-volume -l 1.4 @DEFAULT_AUDIO_SINK@ 5%+

XF86AudioLowerVolume
  wpctl set-volume -l 1.4 @DEFAULT_AUDIO_SINK@ 5%-

XF86AudioMute
  wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

XF86AudioStop
  playerctl stop

super + b; {b,g,f}
  {brave,google-chrome-stable,firefox}

super + a; {f,d}
  {pcmanfm,discord --use-gl=desktop}

super + ctrl + s; {s}
  {flameshot gui}
